<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/public/css/compras.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }
        
        .main-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top: 20px;
        }
        
        .btn-icon {
            padding: 0.25rem 0.5rem;
        }
        
        .status {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }
        
        .status.listo {
            background-color: #d4edda;
            color: #155724;
        }
        
        .status.procesando {
            background-color: #fff3cd;
            color: #856404;
        }
        
        .actions {
            white-space: nowrap;
        }
        
        .user-info {
            display: inline-block;
            margin-right: 15px;
            font-weight: 500;
        }
        
        .btn-logout {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            float: right;
        }
        
        .btn-logout:hover {
            background-color: #c82333;
        }
        
        .form-control-file {
            display: block;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/menu'); %>
            
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <pre><%= JSON.stringify(user, null, 2) %></pre>
                <% if (user) { %>
                    <div class="user-info">
                      Bienvenido, <%= user.nombre %> 
                    </div>
                <% } %>

                <button id="logoutBtn" class="btn-logout">Cerrar Sesión</button>

                <div class="main-content">
                    <h1>Historial Médico</h1>
                   
                    <div class="input-group mb-3">
                        <input type="text" id="searchConsultasInput" class="form-control" placeholder="Buscar consultas...">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                    </div>
                    
                    <div class="table-container">
                        <h2>Registros de Historiales</h2>
                       
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Paciente</th>
                                    <th>Fecha de Registro</th>
                                    <th>Diagnóstico</th>
                                    <th>Observaciones</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="consultasTableBody">
                                <!-- Los datos se cargarán dinámicamente desde JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal para Ver/Editar Historial Médico -->
    <div class="modal fade" id="verHistorialModal" tabindex="-1" role="dialog" aria-labelledby="verHistorialModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="verHistorialModalLabel">Detalles del Historial Médico</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Contenido dinámico se insertará aquí desde JavaScript -->
                </div>
                <div class="modal-footer">
                    <!-- Botones dinámicos se insertarán aquí desde JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/public/consulta/historia.js"></script>
</body>
</html>